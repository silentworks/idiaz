{% extends 'layouts/default.twig' %}

{% block pageTitle %}{{ pageTitle | default("Latest Ideas") }}{% endblock %}

{% block content %}
    {% for idea in ideas %}
        <div class="pure-u-1-3">
            <div class="idea">
                <a href="/ideas/{{ idea.id }}">
                    <span class="info">{{ idea.title }}</span>
                </a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
