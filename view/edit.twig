{% extends 'layouts/default.twig' %}

{% block pageTitle %}<a href="{{ path_for('ideas.show', {id: idea.id}) }}" class="idea-back">Back to {{ idea.title }}</a>{% endblock %}

{% block content %}
    <div id="idea-edit-form" class="pure-u-1">
        <form class="pure-form pure-form-stacked" action="{{ path_for('ideas.update', {id: idea.id}) }}" method="post">
            <fieldset>
                <label for="title">Title</label>
                <input name="title" id="title" type="text" placeholder="Title" class="pure-u-1" value="{{ idea.title }}">

                <label for="content">Content</label>
                <textarea name="content" id="content" cols="30" rows="15" class="pure-u-1">{{ idea.content }}</textarea>

                <button type="submit" class="pure-button pure-button-primary">Save</button>
            </fieldset>
        </form>
    </div>
{% endblock %}
